include "./current.conf"

### Autostart
exec dbus-update-activation-environment DISPLAY I3SOCK SWAYSOCK WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
exec swayidle
exec mako
exec pipewire
exec mpd

### GTH theme
set $gnome-schema org.gnome.desktop.interface

# exec_always {
#     gsettings set $gnome-schema gtk-theme 'Papirus'
#     gsettings set $gnome-schema icon-theme 'Papirus'
#     gsettings set $gnome-schema cursor-theme 'Your cursor Theme'
#     gsettings set $gnome-schema font-name 'Your font name'
# }

set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $term foot
set $menu wofi --show=drun

set $big_monitor HDMI-A-1
set $laptop_monitor eDP-1

default_border pixel 3
gaps inner 10
smart_borders on
smart_gaps off
floating_modifier $mod normal


# border background text indicator child_border
client.focused $blue $blue $crust $red $blue
client.focused_inactive $base $base $text $base $base
client.unfocused $base $base $text $base $base

### Output configuration
output "*" bg ~/media/wallpapers/current.png fill
output $laptop_monitor resolution 1366x768 position 1440,0
output $big_monitor resolution 1440x900 position 0,0

### Input configuration
input "*" {
    dwt enabled
        tap enabled
        middle_emulation enabled
        xkb_layout "pl(colemak_dh_ansi),pl"
        xkb_options caps:escape
}
# seat "*" hide_cursor when-typing enable

### Key bindings

# Take screenshot
bindsym Print exec grimshot --notify save area

# Toggle between dark and light variant of current theme
bindsym $mod+Shift+w exec ~/.scripts/colorscheme.py --toggle

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+q kill

# Start app launcher
bindsym $mod+p exec $menu

# Reload the configuration file
bindsym $mod+Shift+r reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exit

#
# audio:
#

# mute
bindsym $mod+F6 exec pamixer -t

# decrease volume by 2%
bindsym $mod+F7 exec pamixer -d 2 --allow-boost

# increase volume by 2%
bindsym $mod+F8 exec pamixer -i 2 --allow-boost

# the same with XF keys
bindsym XF86AudioMute exec pamixer -t
bindsym XF86AudioLowerVolume exec pamixer -d 2 --allow-boost
bindsym XF86AudioRaiseVolume exec pamixer -i 2 --allow-boost

# control music player daemon
bindsym $mod+F9 exec mpc prev
bindsym $mod+F10 exec mpc toggle
bindsym $mod+F11 exec mpc next

# the same with XF keys
bindsym XF86AudioPrev exec mpc prev
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioNext exec mpc next

#
# brightness:
#

# decrease monitor brightness by 10%
bindsym $mod+F2 exec brightnessctl set 10%-

# increase monitor brightness by 10%
bindsym $mod+F3 exec brightnessctl set +10%

# the same with XF keys
bindsym XF86MonBrightnessDown exec brightnessctl set 10%-
bindsym XF86MonBrightnessUp exec brightnessctl set +10%

#
# moving around:
#

# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

#
# Workspaces:
#

# Workspace names
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10


# Assigning workspaces to outputs
workspace $ws1 output $big_monitor
workspace $ws2 output $laptop_monitor
workspace $ws3 output $laptop_monitor
workspace $ws4 output $laptop_monitor
workspace $ws5 output $laptop_monitor
workspace $ws6 output $laptop_monitor
workspace $ws7 output $laptop_monitor
workspace $ws8 output $laptop_monitor
workspace $ws9 output $laptop_monitor
workspace $ws10 output $laptop_monitor

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# assign [app_id="Firefox"] workspace $ws2
assign [app_id="org.qutebrowser.qutebrowser"] workspace $ws1
assign [app_id="org.pwmt.zathura"] workspace $ws1
for_window [instance="Godot_*"] floating enable
for_window [instance="org.qbittorrent.qBittorrent"] floating enable

#
# Layout stuff:
#

# Change between tiling and tabbed layout
bindsym $mod+t layout toggle tabbed split

# Change split direction
bindsym $mod+e split toggle

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

#
# Scratchpad:
#

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+m move scratchpad

# Show window from scratchpad
bindsym $mod+m scratchpad show

#
# Resizing containers:
#

mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Hide waybar
bindsym $mod+comma exec swaymsg bar mode invisible
bindsym $mod+Shift+comma exec swaymsg bar mode dock
bar {
    swaybar_command waybar
}
